<form 
    method="post"
    action="{{ path('app_blog_delete_comment', {'id': comment.id}) }}" 
    onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
    
    <input type="hidden" name="_token" value="{{ csrf_token('delete_comment_blog' ~ comment.id) }}">
    
    <button class="btn btn-sm btn-outline-warning {{ size|default('') }}"><i class="fas fa-trash-alt pe-3"></i>{{ button_label|default('Supprimer') }}</button>
</form>
