<!DOCTYPE html>
<html class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">    

    <title>Mon BLOG - {% block title %}{% endblock %}</title>

    {# BLOCK CSS #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {# BLOCK JS #}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

</head>

<body class="d-flex flex-column h-100">

    {# HEADER #}
    <header>
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid">

          <a class="navbar-brand" href="{{ path('app_main_home') }}">Blog<i class="fa-solid fa-blog px-2"></i>wf3</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>


          <div class="collapse navbar-collapse" id="navbarCollapse">

            {# Menu de Gauche #}
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_blog_index') }}"><i class="fa-solid fa-lg fa-newspaper pe-2"></i>Blog</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_main_contact') }}"><i class="fa-solid fa-lg fa-envelope pe-2"></i>Contact</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_blog_new_post') }}"><i class="fas fa-lg fa-folder-plus pe-2"></i>Nouvelle publication</a>
              </li>              
            </ul>

            {# Menu de Droite #}
            <ul class="navbar-nav ms-auto mb-2 mb-md-0">
              <li class="nav-item">

                {% if app.user %}
                  <a class="nav-link" href="{{ path('app_main_logout') }}"><i class="fas fa-lg fa-sign-out-alt pe-2"></i>DÃ©connexion</a>
                {% else %}
                  <a class="nav-link" href="{{ path('app_main_login') }}"><i class="fas fa-lg fa-sign-in-alt pe-2"></i>Connexion</a>
                {% endif %}

              </li>
            </ul>            

            {# Formulaire de recherche #}
{#             <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Trouver une publication" aria-label="Search">
              <button class="btn btn-outline-success" type="submit"><i class="fas fa-search"></i></button>
            </form> #}

          </div>
        </div>
      </nav>
    </header>

    {# MAIN #}
    <main class="container-fluid flex-shrink-0">
        
      {# Container pour les messages flash #}
      <div id="messages" class="container-md p-0 m-0 mx-auto">
        <div class="row p-0 m-0">
          {% for label, messages in app.flashes %}
            {% for message in messages %}
               <div class="alert alert-{{ label }} col-12" role="alert">{{ message }}</div>
            {% endfor %}
          {% endfor %}
        </div>
      </div>

      {# BLOCK PRINCIPAL #}
      {% block body %}{% endblock %}

    </main>        

    {# FOOTER #}
    <footer class="footer mt-auto py-2 bg-dark">
      <div class="container">
        <span class="text-muted">Ceci est le footer</span>
      </div>
    </footer>

</body>

</html>